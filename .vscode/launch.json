{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat test",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/packages/hardhat/node_modules/.bin/hardhat",
      "args": ["test", "--network", "hardhat"],
      "cwd": "${workspaceFolder}/packages/hardhat"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat run",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/packages/hardhat/node_modules/.bin/hardhat",
      "args": ["run", "scripts/deploy.ts", "--network", "hardhat"],
      "cwd": "${workspaceFolder}/packages/hardhat"
    }
  ]
}
